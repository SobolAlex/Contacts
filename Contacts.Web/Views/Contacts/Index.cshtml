@model IEnumerable<Contacts.Domain.Entities.Contact>

@{
    ViewData["Title"] = "Contacts";
    var maxBirthDate = DateTime.Today.AddYears(-18).ToString("yyyy-MM-dd");
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <h2>Список контактов</h2>

    <form method="get" class="mb-3 d-flex">
        <input type="text" name="searchPhone" value="@ViewBag.SearchPhone"
               placeholder="Поиск по номеру телефона" class="form-control me-2" />
        <button type="submit" class="btn btn-outline-primary">Поиск</button>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary ms-2">Сбросить</a>
    </form>

    <button class="btn btn-primary mb-2" data-bs-toggle="modal" data-bs-target="#createModal">
        Добавить контакт
    </button>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Имя</th>
                <th>Телефон</th>
                <th>Должность</th>
                <th>Дата рождения</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contact in Model)
            {
                <tr>
                    <td>@contact.Name</td>
                    <td>@contact.MobilePhone</td>
                    <td>@contact.JobTitle</td>
                    <td>@contact.BirthDay.ToString("yyyy-MM-dd")</td>
                    <td>
                        <button class="btn btn-sm btn-success"
                                data-bs-toggle="modal"
                                data-bs-target="#updateModal"
                                data-id="@contact.Id"
                                data-name="@contact.Name"
                                data-phone="@contact.MobilePhone"
                                data-job="@contact.JobTitle"
                                data-birth="@contact.BirthDay.ToString("yyyy-MM-dd")">
                            Редактировать
                        </button>

                        <form method="post" asp-action="Delete"
                              asp-route-id="@contact.Id" class="d-inline">
                            <button class="btn btn-sm btn-danger">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- CREATE MODAL -->
<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Create" method="post" class="needs-validation">
                <div class="modal-header">
                    <h5 class="modal-title">Добавить контакт</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="text" name="Name"
                           placeholder="Имя"
                           class="form-control mb-1 js-only-letters"
                           required maxlength="25" />
                    <div class="invalid-feedback mb-2">Только буквы</div>

                    <input type="text" name="PhoneNumber"
                           placeholder="Телефон"
                           class="form-control mb-2"
                           required pattern="^375(29|33|44|25)\d{7}$" />
                    <div class="invalid-feedback mb-2">
                        Номер телефона должен быть в формате <b>375xxxxxxxxx</b>
                    </div>

                    <input type="text" name="JobTitle"
                           placeholder="Должность"
                           class="form-control mb-1 js-only-letters"
                           maxlength="30" />
                    <div class="invalid-feedback mb-2">Только буквы</div>

                    <input type="date" name="BirthDay"
                           max="@maxBirthDate"
                           class="form-control mb-2"
                           required />
                    <div class="invalid-feedback">Возраст должен быть 18+</div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Отмена
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- UPDATE MODAL -->
<div class="modal fade" id="updateModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="updateForm" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Редактировать контакт</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="Id" id="updateId" />

                    <input type="text" name="Name" id="updateName"
                           class="form-control mb-1 js-only-letters"
                           required maxlength="25" />
                    <div class="invalid-feedback mb-2">Только буквы</div>

                    <input type="text" name="PhoneNumber" id="updatePhone"
                           class="form-control mb-2"
                           required pattern="^375(29|33|44|25)\d{7}$" />
                    <div class="invalid-feedback mb-2">
                        Номер телефона должен быть в формате <b>375xxxxxxxxx</b>
                    </div>

                    <input type="text" name="JobTitle" id="updateJob"
                           class="form-control mb-1 js-only-letters"
                           maxlength="30" />
                    <div class="invalid-feedback mb-2">Только буквы</div>

                    <input type="date" name="BirthDay" id="updateBirth"
                           max="@maxBirthDate"
                           class="form-control mb-2"
                           required />
                    <div class="invalid-feedback">Возраст должен быть 18+</div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Отмена
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

<script src="~/js/contacts.js"></script>